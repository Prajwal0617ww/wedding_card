    <script>
        const translations = {
            en: {
                documentTitle: 'Wedding Invitation | Radhika & Abhijeet',
                coupleNames: 'Radhika & Abhijeet',
                gettingMarried: 'Are getting married!',
                saveTheDate: 'Save The Date',
                inviteMain: 'We joyfully invite you to celebrate with us as we begin our new life together.',
                brideName: 'Radhika',
                brideParents: 'Daughter of<br>Sopan Vitthalrao Yadgire<br>Vidya Sopanrao Yadgire',
                groomName: 'Abhijeet',
                groomParents: 'Son of<br>Sudhakar Manikrao Tayde<br>Pushpatai Sudhakarrao Tayde',
                weddingEvents: 'Wedding Ceremony',
                month: 'Nov',
                timeWedding: '11:39 AM (Muhurat)',
                venueWedding: 'Pushpanjali Lawn, Akola Road, Akot',
                mapWedding: 'View on Map',
                countdownTitle: 'Counting Down To Our Big Day!',
                daysText: 'Days',
                hoursText: 'Hours',
                minutesText: 'Minutes',
                secondsText: 'Seconds',
                blessingsTitle: 'Your Blessings',
                blessingsMessage: 'We humbly request your gracious presence and heartfelt blessings as we embark on this sacred journey of togetherness.',
                withLove: 'With Love,',
                footerFamilies: 'The Yadgire & Tayde Families'
            },
            mr: {
                documentTitle: 'लग्न निमंत्रण | राधिका आणि अभिजीत',
                coupleNames: 'राधिका आणि अभिजीत',
                gettingMarried: 'आमचं लग्न ठरलंय!',
                saveTheDate: 'निमंत्रण',
                inviteMain: 'आमच्या या आनंदाच्या क्षणी आपण उपस्थित राहून आम्हास आशीर्वाद द्यावेत, हीच विनंती.',
                brideName: 'राधिका',
                brideParents: 'सुपुत्री<br>श्री. सोपान विठ्ठलराव यादगिरे<br>सौ. विद्या सोपानराव यादगिरे',
                groomName: 'अभिजीत',
                groomParents: 'सुपुत्र<br>श्री. सुधाकर माणिकराव तायडे<br>सौ. पुष्पाताई सुधाकरराव तायडे',
                weddingEvents: 'लग्न समारंभ',
                month: 'नोव्हेंबर',
                timeWedding: 'सकाळी ११:३९ वा. (मुहूर्त)',
                venueWedding: 'पुष्पांजली लॉन, अकोला रोड, अकोट',
                mapWedding: 'नकाशावर पहा',
                countdownTitle: 'आमच्या मोठ्या दिवसाची उलटी गिनती!',
                daysText: 'दिवस',
                hoursText: 'तास',
                minutesText: 'मिनिटे',
                secondsText: 'सेकंद',
                blessingsTitle: 'आपले आशीर्वाद',
                blessingsMessage: 'आम्ही नम्रपणे विनंती करतो की आपण या पवित्र प्रवासात आमच्या सोबत राहून आपले आशीर्वाद द्यावेत.',
                withLove: 'स्नेहांकित,',
                footerFamilies: 'यादगिरे आणि तायडे परिवार'
            }
        };

        const langEnBtn = document.getElementById('lang-en');
        const langMrBtn = document.getElementById('lang-mr');

        function setLanguage(lang) {
            document.querySelectorAll('[data-key]').forEach(el => {
                const key = el.getAttribute('data-key');
                el.innerHTML = translations[lang][key];
            });
            document.title = translations[lang].documentTitle;
            document.documentElement.lang = lang;

            if (lang === 'en') {
                langEnBtn.classList.add('bg-amber-800', 'text-white');
                langMrBtn.classList.remove('bg-amber-800', 'text-white');
            } else {
                langMrBtn.classList.add('bg-amber-800', 'text-white');
                langEnBtn.classList.remove('bg-amber-800', 'text-white');
            }
        }

        const weddingDate = new Date("Nov 22, 2025 11:39:00").getTime();
        const updateCountdown = () => {
            const now = new Date().getTime();
            const distance = weddingDate - now;
            if (distance < 0) {
                document.getElementById("countdown").innerHTML = "The big day is here!";
                clearInterval(interval);
                return;
            }
            const d = Math.floor(distance / (1000 * 60 * 60 * 24));
            const h = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const m = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const s = Math.floor((distance % (1000 * 60)) / 1000);
            document.getElementById("days").innerHTML = d.toString().padStart(2, '0');
            document.getElementById("hours").innerHTML = h.toString().padStart(2, '0');
            document.getElementById("minutes").innerHTML = m.toString().padStart(2, '0');
            document.getElementById("seconds").innerHTML = s.toString().padStart(2, '0');
        };

        const interval = setInterval(updateCountdown, 1000);
        lucide.createIcons();
        setLanguage('en');
        updateCountdown();
    </script>
</body>
</html>
